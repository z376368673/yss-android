<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5f5f5"
    android:orientation="vertical">
    <com.android.baselib.view.UNavigationBar
        android:id="@+id/uNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/color1">

        <com.android.baselib.view.UImageView
            android:id="@+id/uImageView"
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_52"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_33"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_defult_img"
            app:type="circle" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_8"
            android:text="UserName"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:id="@+id/layout_userInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="end|center_vertical"
            android:layout_marginTop="@dimen/dp_22"
            android:paddingBottom="@dimen/dp_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善资料"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:padding="@dimen/dp_8"
                android:src="@mipmap/ic_right_gary" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="13dp"
            android:visibility="gone"
            android:src="@mipmap/ic_me_setting" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_my_wallet"
        style="@style/itemLayoutStyle"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView style="@style/itemIconStyle"
            android:src="@mipmap/ic_me_wallet"/>

        <TextView
            style="@style/itemTextNameStyle"
            android:text="我的钱包" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@color/white_f5f5f5" />

    <LinearLayout
        android:id="@+id/layout_my_order"
        style="@style/itemLayoutStyle"
     >

        <ImageView style="@style/itemIconStyle"
            android:src="@mipmap/ic_me_order"/>

        <TextView
            style="@style/itemTextNameStyle"
            android:text="全部订单" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@color/white_f5f5f5" />

    <LinearLayout
        android:id="@+id/layout_address_manage"
        style="@style/itemLayoutStyle">

        <ImageView style="@style/itemIconStyle"
            android:src="@mipmap/ic_me_address"/>

        <TextView
            style="@style/itemTextNameStyle"
            android:text="地址管理" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@color/white_f5f5f5" />

    <LinearLayout
        android:id="@+id/layout_become_store"
        style="@style/itemLayoutStyle">

        <ImageView style="@style/itemIconStyle"
            android:src="@mipmap/ic_me_store"/>

        <TextView
            style="@style/itemTextNameStyle"
            android:text="成为商家" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@color/white_f5f5f5" />

    <LinearLayout
        android:id="@+id/layout_become_hhr"
        style="@style/itemLayoutStyle">

        <ImageView style="@style/itemIconStyle"
            android:src="@mipmap/ic_me_hhr"/>

        <TextView
            style="@style/itemTextNameStyle"
            android:text="成为合伙人" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_login_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换账号"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>