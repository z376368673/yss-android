<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_select_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            >

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@mipmap/ic_checkbox1_gary"
            />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_toRightOf="@+id/ll_select_area"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:background="@mipmap/iv_default_img"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/img_icon"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:text="这是商品标题"
                android:lines="2"
                android:textColor="@color/black_1b"
                android:textSize="@dimen/sp_13" />
            <LinearLayout
                android:id="@+id/ll_params"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:padding="@dimen/dp_4"
                android:background="@drawable/rect_gray_5"
                >
            <TextView
                android:id="@+id/tv_content"
                style="@style/default_textview_style"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_11"
                android:text="6色小套盒"
                android:singleLine="true"
                />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ll_params"
                android:layout_marginTop="@dimen/dp_8"
                android:text="¥ 25.00"
                android:textColor="@color/red_d15"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:id="@+id/ll_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_23"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tv_price"
                android:background="@drawable/rect_gray_5"
                >
                <LinearLayout
                    android:id="@+id/button_out"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_checkbox1_gary"
                        />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:textColor="@color/black" />
                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:background="@color/gray"
                    />
                <LinearLayout
                    android:id="@+id/button_in"
                    android:layout_width="@dimen/dp_23"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_close_black"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/goods_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/tv_price"
                android:textColor="@color/gray"
                android:text="x1"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                />

        </RelativeLayout>
    </RelativeLayout>
    <!--<View style="@style/item_input_container_h_divider" />-->

</FrameLayout>