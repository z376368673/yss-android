<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_radio_white_5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout style="@style/default_ll_horizon">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@mipmap/ic_store_black" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/default_textview_style"
                android:layout_marginLeft="@dimen/dp_10"
                android:maxLength="15"
                android:maxLines="1"
                android:text="美迪惠尔店铺"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/more_right"
                android:layout_width="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/ic_right_gary" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_11"
                android:text="待发货"
                android:textColor="@color/red_CB3A3A"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_76"
                android:scaleType="centerCrop"
                android:src="@mipmap/iv_default_img" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:text="待发货待发货待发货待发货待发货待发货待发货待发货待发货待发货"
                    android:textColor="@color/black_1b"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_des"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="￥130.00"
                    android:textColor="@color/black_1b"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_price_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_des"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv_price"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="x1"
                    android:textColor="@color/gray_d7"
                    android:textSize="@dimen/sp_13" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="end"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_des"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/tv_price"
                android:maxLines="1"
                android:text="共1件商品 合计："
                android:textColor="@color/black_1b"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_des"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="￥130.00"
                android:textColor="@color/black_1b"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_comment"
                style="@style/ButtonText"
                android:textColor="@color/black_1b"
                android:background="@drawable/rect_frame_circle_gray"
                android:visibility="gone"
                android:text="评价"
                />
            <TextView
                android:id="@+id/tv_cancel"
                style="@style/ButtonText"
                android:textColor="@color/black_1b"
                android:background="@drawable/rect_frame_circle_gray"
                android:text="取消订单"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_logistics"
                style="@style/ButtonText"
                android:textColor="@color/black_1b"
                android:background="@drawable/rect_frame_circle_gray"
                android:text="查看物流"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_return"
                style="@style/ButtonText"
                android:textColor="@color/black_1b"
                android:background="@drawable/rect_frame_circle_gray"
                android:text="退换货"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_again_buy"
                style="@style/ButtonText"
                android:textColor="@color/red_CB3A3A"
                android:background="@drawable/rect_frame_circle_red"
                android:text="再次购买"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <TextView
                android:id="@+id/tv_payfor"
                style="@style/ButtonText"
                android:textColor="@color/red_CB3A3A"
                android:background="@drawable/rect_frame_circle_red"
                android:text="立即付款"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_delivery"
                style="@style/ButtonText"
                android:textColor="@color/red_CB3A3A"
                android:background="@drawable/rect_frame_circle_red"
                android:text="提醒发货"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:id="@+id/tv_confirm"
                style="@style/ButtonText"
                android:textColor="@color/red_CB3A3A"
                android:background="@drawable/rect_frame_circle_red"
                android:text="确认收货"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_15"
                />
        </LinearLayout>
    </LinearLayout>
  
</LinearLayout>