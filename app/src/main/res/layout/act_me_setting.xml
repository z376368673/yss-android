<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_f5f5f5"
   >
    <com.android.baselib.view.UNavigationBar
        android:id="@+id/uNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout_my_wallet"
        style="@style/itemLayoutStyle"
        android:onClick="accountSet"
        android:clickable="true"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            style="@style/itemTextNameStyle"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:padding="@dimen/dp_5"
            android:text="账号与安全" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@color/white_f5f5f5" />

    <LinearLayout
        android:id="@+id/layout_clear_cache"
        style="@style/itemLayoutStyle"
        android:onClick="clearCache"
        android:clickable="true"
       >
        <TextView
            style="@style/itemTextNameStyle"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:padding="@dimen/dp_5"
            android:text="清除缓存" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@color/white_f5f5f5" />

    <LinearLayout
        android:id="@+id/layout_about_our"
        style="@style/itemLayoutStyle"
        android:onClick="aboutOur"
        android:clickable="true"
        >
        <TextView
            style="@style/itemTextNameStyle"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:padding="@dimen/dp_5"
            android:text="关于曰十三" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>

</LinearLayout>