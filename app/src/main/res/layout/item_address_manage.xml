<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_12"
        android:maxLength="5"
        android:text="小娟娟"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divider"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_25"
        android:maxLength="11"
        android:text="13812145165156154"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_12"
        android:maxLines="2"
        android:text="上海市浦东新区张江微电子港1号楼201室"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <ImageView
        android:id="@+id/tab_div"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_pot5"
        android:layout_below="@+id/tv_address"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@color/gray"
        android:src="@color/gray" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_div"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginTop="1px"
            android:src="@mipmap/ic_checkbox1_gary" />

        <TextView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:text="默认地址"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/dp_1"
                android:src="@mipmap/ic_bianji_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="编辑"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_1"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_delect_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="删除"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5" />
</RelativeLayout>
