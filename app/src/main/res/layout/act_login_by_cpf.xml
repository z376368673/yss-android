<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:paddingTop="@dimen/dp_28"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:padding="@dimen/dp_15"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_close_black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_60">

        <ImageView
            android:layout_width="@dimen/dp_73"
            android:layout_height="@dimen/dp_54"
            android:scaleType="fitCenter"
            android:src="@mipmap/iv_cpf_log" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Culture Philosophy Faith"
            android:textColor="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_43"
        android:layout_marginRight="@dimen/dp_43"
        android:orientation="vertical">

        <LinearLayout style="@style/default_ll_horizon">

            <EditText
                android:id="@+id/et_phone_number"
                style="@style/default_edit_content"
                android:hint="请输入用户名"
                android:inputType="text"
                android:maxLength="21"
                android:paddingLeft="@dimen/dp_10"
                android:textColorHint="@color/gray_d7" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_pot5"
            android:background="@color/divider_color" />

        <LinearLayout
            style="@style/default_ll_horizon"
            android:layout_marginTop="@dimen/dp_15">

            <EditText
                android:id="@+id/et_pwd"
                style="@style/default_edit_content"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:maxLength="21"
                android:paddingLeft="@dimen/dp_10"
                android:textColorHint="@color/gray_d7" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_pot5"
            android:background="@color/divider_color" />

        <Button
            android:id="@+id/btn_login"
            style="@style/default_button_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/rect_radio_blue_5"
            android:text="@string/login"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
