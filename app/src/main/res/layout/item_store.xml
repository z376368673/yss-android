<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_store_head"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:scaleType="centerCrop"
                android:src="@mipmap/iv_default_img" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="11dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店名"
                        android:textColor="@color/black_1b"
                        android:textSize="@dimen/dp_13" />
                    <LinearLayout
                        android:id="@+id/layout_qjd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_11"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="@dimen/dp_2"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_qjd_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="旗舰店"
                            android:textColor="@color/red_CB3A3A"
                            android:textSize="@dimen/dp_13" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月销 s% 件"
                        android:visibility="gone"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/dp_11" />

                    <TextView
                        android:id="@+id/tv_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" %s 件在售中"
                        android:textColor="@color/gray_99"
                        android:textSize="@dimen/dp_11" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_button"
                style="@style/ButtonText"
                android:background="@drawable/rect_frame_circle_black_1b"
                android:text="进店"
                android:textColor="@color/black_1b"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_17"
            android:orientation="horizontal">
            <com.android.baselib.view.UImageView
                android:id="@+id/iv_image1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_110"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/iv_default_img"
                app:radius="5dp"
                app:type="round" />
            <com.android.baselib.view.UImageView
                android:id="@+id/iv_image2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_110"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/iv_default_img"
                app:radius="5dp"
                app:type="round" />
            <com.android.baselib.view.UImageView
                android:id="@+id/iv_image3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_height="@dimen/dp_110"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/iv_default_img"
                app:radius="5dp"
                app:type="round" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
