<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_f5f5f5"
   >
    <com.android.baselib.view.UNavigationBar
        android:id="@+id/uNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:padding="@dimen/dp_5"
        android:textColor="@color/gray_99"
        android:text="密码设置" />
    <LinearLayout
        android:id="@+id/layout_modify"
        style="@style/itemLayoutStyle"
        android:onClick="accountSet"
        android:clickable="true"
        >
        <TextView
            style="@style/itemTextNameStyle"
            android:textSize="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_12"
            android:padding="@dimen/dp_5"
            android:text="修改密码" />

        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/ic_right_gary" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:padding="@dimen/dp_5"
        android:textColor="@color/gray_99"
        android:text="安全绑定" />
    <LinearLayout
        android:id="@+id/layout_phone"
        style="@style/itemLayoutStyle"
        android:onClick="accountSet"
        android:clickable="true"
        >
        <TextView
            style="@style/itemTextNameStyle"
            android:textSize="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_12"
            android:padding="@dimen/dp_5"
            android:layout_weight="0"
            android:text="手机号" />
        <TextView
            android:id="@+id/tv_phone"
            style="@style/itemTextNameStyle"
            android:textSize="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_20"
            android:padding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:textColor="@color/red_CB3A3A"
            android:text="未绑定手机号" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:src="@color/white_f5f5f5" />

</LinearLayout>